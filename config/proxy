ServerName homeserver.dubno.com
UseCanonicalName Off
ProxyRequests On

<Directory "/">
    Order deny,allow
    Deny from all
    AllowOverride all
</Directory>

<Proxy *>
    Order deny,allow
    Deny from all
    Allow from localhost .localdomain
</Proxy>

ProxyPass /homeserver/ http://linux2.dubno.com:8080/homeserver/
ProxyPassReverse /homeserver/ http://linux2.dubno.com:8080/homeserver/
<Location /homeserver/>
    Order allow,deny
    AuthName "HomeServer"
    AuthType Basic
    AuthUserFile "homeserver/passwd"
    Require valid-user
    Allow from 192.168.2
    Satisfy Any
</Location>

ProxyPass /video/ http://video.dubno.com:8080/
ProxyPassReverse /video/ http://video.dubno.com:8080/
<Location /video/>
    Order allow,deny
    AuthName "HomeServer"
    AuthType Basic
    AuthUserFile "homeserver/passwd"
    Require valid-user
    Allow from 192.168.2
    Satisfy Any
</Location>

<Location /media/>
    SetHandler None
    Options FollowSymLinks
    Order allow,deny
    Allow from all
</Location>

ProxyPass /sandtable/ http://sandtable.dubno.com:80/sandtable/
ProxyPassReverse /sandtable/ http://sandtable.dubno.com:80/sandtable/
<Location /sandtable/>
    Order allow,deny
    AuthName "HomeServer"
    AuthType Basic
    AuthUserFile "homeserver/passwd"
    Require valid-user
    Allow from 192.168.2
    Satisfy Any
</Location>

